@model ProjetoCrudeFInalAPI.Models.Personagens


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes do personagem";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes do personagem
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.PersonagensId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>

@Html.Partial("~/Views/Itens/_PorPersonagens.cshtml", Model.Itens.ToList())
@section ScriptPage {
    <script type="text/javascript">$(document).ready(function () {
            $('li').removeClass("active");
            $('#liPersonagens').addClass("active");
        });</script>
}

