@model IEnumerable<ProjetoCrudeFInalAPI.Models.Inventarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Inventarios";
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}<div class="panel panel-primary">
    <div class="panel-heading">
       inventarios registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InventarioId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th></th>

                </tr>                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventarioId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", new { id = item.InventarioId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Detalhes", "Details", new { id = item.InventarioId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.InventarioId }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }               
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar um novo inventario", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>
@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet">
}
@section ScriptPage {
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">$(document).ready(function () {
                            $('.table').dataTable({
                                "order": [[1, "asc"]]
                            });
    });
    </script>
}


