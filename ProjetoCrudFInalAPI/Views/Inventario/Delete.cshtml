@model ProjetoCrudeFInalAPI.Models.Inventarios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Removendo dados dos inventarios";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do invetario a serem removidos
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-remove"></i>
                </span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover inventario" class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
        }
    </div>
</div>

